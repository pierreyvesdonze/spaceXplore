{% extends "base.html.twig" %}

{% block body %}

	<div id="carouselExampleCaptions" class="carousel slide carousel-galaxy" data-ride="carousel">

		<!--ITEM-->
		<div class="carousel-inner">
			{% for id, galaxy in galaxies %}
				<div {% if loop.first %} class="carousel-item active" {% else %} class="carousel-item" {% endif %}>
					<img src="{{ asset('uploads/images/' ~ galaxy.brochureFilename) }}" class="" alt="galaxy">
					<div class="carousel-caption carousel-caption-galaxy d-md-block">
						<h5>{{ galaxy.name }}</h5>
						<p>{{ galaxy.description }}</p>

						<hr>

						<ul>
							<li>
								<span>Âge :
								</span>
								{{ galaxy.age }}
							</li>
							<li>
								<span>Diamètre :
								</span>
								{{ galaxy.size }}
								années lumière
							</li>
							<li>
								<span>Constellation :
								</span>
								{{ galaxy.constellation }}</li>
						</ul>
						<a href="{{ path('galaxy_stars_list', {"id": galaxy.id}) }}" class="btn btn-primary">Visiter</a>
					</div>
				</div>
			{% endfor %}

			<!--CONTROL-->
			<a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>

	{% endblock %}
